{% extends 'CivixFrontBundle::layout.html.twig' %}

{% block page_title %}Local Groups{% endblock %}
{% block head_script %}
    {% javascripts
    'http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <p>
            <div class="btn-group bottom" role="group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ selectedGroup ? (selectedGroup.isCountryGroup() ? selectedGroup.officialName : selectedGroup.parent.officialName) : 'Select the country group' }}
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                   {% for group in countryGroups %}
                   <li>
                       <a href="{{path('civix_front_local_groups', {'id': group.id})}}">{{ group.officialName }}</a>
                   </li>
                   {% endfor %}
                </ul>
            </div>
            {% if selectedGroup %}
                <div class="btn-group bottom">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ selectedGroup and selectedGroup.isStateGroup() ? selectedGroup.officialName : 'Select the state group' }}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        {% for group in (selectedGroup.isCountryGroup() ? selectedGroup.children : selectedGroup.parent.children) %}
                            {% if group.isStateGroup() %}
                                <li>
                                    <a href="{{path('civix_front_local_groups', {'id': group.id})}}">{{ group.officialName }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <div class="input-group col-xs-3 pull-right">
                    <span class="input-group-addon" id="basic-addon1">
                        <i class="glyphicon glyphicon-search"></i>
                    </span>
                    <input type="text" class="form-control col-xs-3" placeholder="Search"  data-filter-input="#state-groups" name="localsearch" />
                </div>
            {% endif %}
            </p>
        </div>
    </div>
 {% if selectedGroup %}
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped" id="state-groups">
                <thead>
                    <tr>
                        <th class="span1">ID</th>
                        <th class="span5">Official Name</th>
                        <th class="span4">Location Name</th>
                        <th class="span2">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for group in selectedGroup.localChildren %}
                        <tr data-filter-item="{{ group.officialName }}">
                            <td>{{ group.id }}</td>
                            <td>{{ group.officialName }}</td>
                            <td>{{ group.locationName }}</td>
                            <td class="table-options">
                                <a href="{{ path('civix_front_local_group',{'id': group.id}) }}" title="Limits">
                                    <i class="glyphicon glyphicon-check"></i> Assign
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" style="text-align: center">Table is empty.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endif %}
{% endblock content %}

{% block foot_script_assetic %}
    {{ parent() }}
    {% javascripts
    '@CivixFrontBundle/Resources/public/js/filter.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script_assetic %}